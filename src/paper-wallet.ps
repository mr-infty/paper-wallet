%!PS-Adobe-3.0
/mm {72 mul 25.4 div} def
%%Pages: 2
%%PageOrder: Ascend
%%BoundingBox: 0 0 210 mm 297 mm
%%DocumentPaperSizes: a4
%%EndComments

%%BeginPrologue
%%BeginResource: helper 0 0
% label x y fold
/fold {
   gsave
      .75 mm setlinewidth
      translate % center coordinates

      % arrow shaft
      newpath
      0 0 2.5 mm 270 450 arc
      stroke

      % arrow head
      newpath
      -2 mm  2.5 mm   moveto
      0 mm     4 mm   lineto
      0 mm     1 mm   lineto
      closepath
      fill

      % label
      newpath
      5 mm 1 mm moveto
      /Helvetica-Bold findfont 12 scalefont setfont
      show
   grestore
} def

% label x1 y1 x2 y2 foldline
/foldlinedict 5 dict def
/foldline {
foldlinedict begin
   /y2 exch def
   /x2 exch def
   /y1 exch def
   /x1 exch def
   /label exch def

   % Dashed line indicating fold
   gsave
      [ 1 mm .5 mm ] 1.25 mm setdash
      newpath
      x1 y1 moveto
      x2 y2 lineto
      stroke
   grestore
   
   % Arrow and label
   gsave
      x1 x2 add 2 div
      y1 y2 add 2 div
      translate
      y2 y1 sub
      x2 x1 sub
      atan rotate
      label 0 0 fold
   grestore
end
} def

% text x y centeredtext
/centeredtext {
   newpath
   moveto
   dup stringwidth
   2 div neg
   exch 2 div neg exch
   rmoveto
   show
} def

% x y r circle
/circle {
   gsave
      newpath
      0 360 arc
      stroke
   grestore
} def

% angle x y siegel
/siegel {
   gsave
      translate
      rotate
      newpath
      0 0 7.5 mm 180 360 arc
      stroke

      /Helvetica findfont 9 scalefont setfont
      (seal) 0 -3 mm centeredtext
      %0 0 7.5 mm circle
   grestore
} def

% width height rect
/rectdict 2 dict def
/rect {
rectdict begin
   /height exch def
   /width exch def
   gsave
      newpath
      0 0 moveto
      width 0 lineto
      width height lineto
      0 height lineto
      closepath
      stroke
   grestore
end
} def

% x1 x2 min
/min { 2 copy gt { exch } if pop } bind def

% str n splitstring
/splitstringdict 2 dict def
/splitstring {
   splitstringdict begin
      /n exch def
      /str exch def
      [
      0 n str length 1 sub {
         dup str length exch sub n min
         str 3 1 roll
         getinterval
      } for
      ]
   end
} def
%%EndResource
%%EndPrologue

%%BeginSetup
%%BeginFeature: *Duplex True
<< /Duplex true >> setpagedevice
%%EndFeature
%%EndSetup

% Draw first page (interior of the wallet)
%%Page: 1 1

% Draw border around entire page in order to facilitate cutting,
% if the document gets rescaled during print
